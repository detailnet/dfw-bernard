{
    "name": "detailnet/dfw-bernard",
    "description": "DETAIL Framework library extending the features of Bernard",
    "type": "library",
    "keywords": [
        "dfw",
        "detailnet",
        "bernard"
    ],
    "homepage": "https://github.com/detailnet/dfw-bernard/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "bernard/bernard": "~0.12.2",
        "detailnet/dfw-log": "~0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4.5",
        "squizlabs/php_codesniffer" : "~2.2.0",
        "phpmd/phpmd": "~2.1.3",
        "satooshi/php-coveralls": "dev-master",
        "iron-io/iron_mq": "~1.5"
    },
    "autoload": {
        "psr-0": {
            "Detail\\Bernard\\": "src/"
        }
    },
	"autoload-dev": {
        "psr-0": {
            "DetailTest\\Bernard\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
